      "name": "GUI",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build gui",
      "program": "${workspaceFolder}/src/GuiApp/Avalonia/FileTime.GuiApp/bin/Debug/net6.0/FileTime.GuiApp.dll",
