                    Background="{DynamicResource ContainerBackgroundBrush}"
                    HorizontalAlignment="Center"
                    Padding="20"
                    VerticalAlignment="Center">
                    <Grid RowDefinitions="Auto,Auto">

                        <TextBlock Text="{Binding Text}" />
